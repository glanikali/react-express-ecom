doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/css/main.css")
        title #{title}
    body
        header
            nav 
                ul.nav-container
                    li
                        a(href="/" class=(title.toLowerCase() === "shop" ? "active" : "")) Shop
                    li 
                        a(href="/cart" class=(title.toLowerCase() === "cart" ? "active" : "")) Cart
                    li 
                        a(href="/admin/add-product" class=(title.toLowerCase() === "add product" ? "active" : "")) Add Product
                    li 
                        a(href="/admin/product" class=(title.toLowerCase() === "manage products" ? "active" : "")) Manage Products
        main
            div.wrapper
                h1.text-center My Products
                ul.grid-1
                    each product in filteredProducts
                        li.card.single-product
                            div.image-container
                                img(src=product.image_url, alt="product image")
                            div 
                                h3 Name: #{product.name}
                                h3 Price: $#{product.price}
                            div
                               form(action=(`/cart?id=${product.id}&name=${product.name}&price=${product.price}&image_url=${product.image_url}`) method="POST") 
                                    button.btn Add to cart